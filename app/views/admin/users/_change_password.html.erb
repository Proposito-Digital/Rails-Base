<!-- MODAL NUTRITIONAL TABLE -->
<div class="modal" id="modal-change-password">
  <div class="modal-dialog ">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%=translate_view_shared("change_password_modal.title")%></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
        <%= form_for current_user, :url => { :action => 'update_password', :controller => 'users', :method => :patch } do |f| %>
      <div class="modal-body">
          <div class="row">
            <div class="mb-3">
              <%= f.label translate_view_shared("change_password_modal.current_password") %> <i></i><br />
              <%= f.password_field :current_password, class: 'form-control' %>
            </div>
            <div class="mb-3">
              <%= f.label :password, translate_view_shared("change_password_modal.new_password") %><br />
              <%= f.password_field :password, :autocomplete => "off", class: 'form-control'  %>
            </div>
            <div class="mb-3">
              <%= f.label translate_view_shared("change_password_modal.confirm_new_password") %><br />
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </div>      
      </div>
      <div class="d-flex justify-content-between modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%=translate_view_shared('cancel')%></button>
        <%= f.submit translate_view_shared('save'), :class => 'btn btn-primary' %>
      </div>
        <% end %>
    </div>
  </div>
</div>
<!-- FIM MODAL NUTRITIONAL TABLE -->