<!-- Button trigger modal -->
<div class="modal" id="modal_destroy_<%=instance.id%>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Remover <%= model_name %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
        <div class="modal-body">
          <p><h4>Deseja realmente remover o(a) <%= model_name %>?</h4></p>
        </div>
        <div class="d-flex justify-content-between modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <%= link_to 'Remover', url, data: { turbo_method: :delete }, class: "btn btn-danger" %>
        </div>
    </div>
  </div>
</div>